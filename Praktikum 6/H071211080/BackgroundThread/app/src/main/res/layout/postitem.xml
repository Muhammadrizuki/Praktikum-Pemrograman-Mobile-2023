<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        android:layout_marginVertical="12dp"
        app:cardElevation="4dp"
        android:layout_marginTop="40dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="19dp"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                android:src="@drawable/tanjiro"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamado Tanjiro"
                android:textSize="20dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/ivProfil"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/tvUser"
                app:layout_constraintStart_toEndOf="@id/ivProfil"/>
            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tantan"
                android:textSize="17dp"
                android:layout_marginStart="8dp"
                android:textColor="#FF7E7E7E"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintBottom_toBottomOf="@id/ivProfil"
                app:layout_constraintStart_toEndOf="@id/ivProfil"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_post"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/ivProfil"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivPost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/noimage"
                        android:scaleType="centerCrop"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/tvCapt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="captionnnn!!!!"
                app:layout_constraintTop_toBottomOf="@id/cv_post"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>