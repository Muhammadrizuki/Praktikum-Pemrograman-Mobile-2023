<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:src="@drawable/round_arrow_back_24"
                android:paddingHorizontal="4dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_contact_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/bigger_profile_pic_touch_ripple"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:backgroundTint="@android:color/transparent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_contact_image"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_person"
                    app:shapeAppearanceOverlay="@style/CircularImage"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/profile_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_contact_image_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Brewin Agung Mustamin"
                android:textSize="18sp"
                android:textColor="?colorOnPrimary"/>

            <TextView
                android:id="@+id/profile_contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_contact_name"
                android:layout_marginTop="2dp"
                android:text="+62 812 3456 7890"
                android:textColor="?colorOnPrimary"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="?colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/profile_contact_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sibuk"
                android:textColor="?colorOnPrimary"/>

            <TextView
                android:id="@+id/profile_contact_status_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 January 2020"
                android:textColor="?colorOnPrimary"
                android:layout_below="@id/profile_contact_status"
                android:textSize="11sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>