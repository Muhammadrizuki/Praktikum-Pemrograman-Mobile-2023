<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/headerLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_post_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/homeProfileIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/mu" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Alkavini De Bruynesse"/>
            <TextView
                android:id="@+id/aliasnameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="ADB"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/contentFl"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/headerLl"
        >
        <ImageView
            android:id="@+id/contentImageIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mu" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/contentDescLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentFl"
        android:background="@drawable/description_post_bg"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">
        <TextView
            android:id="@+id/contentDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:text="content description"/>
    </LinearLayout>
</RelativeLayout>