<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AddPostFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/addPostTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Add Post"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/addImagePostIv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:src="@drawable/noimg"
        android:layout_below="@id/addPostTv"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:background="#DADADA"/>
    <TextView
        android:id="@+id/addDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="20dp"
        android:layout_below="@id/addImagePostIv"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addDescriptionTil"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:hint="Description"
        android:layout_below="@id/addDescriptionTv">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addDescriptionEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/postBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/addDescriptionTil"
        android:text="Post"/>

</RelativeLayout>