<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profil"
        app:shapeAppearance="@style/cirle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/propil"/>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Besse Sahriyuni"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="@color/coklat"
        android:textSize="20dp"
        android:layout_toRightOf="@id/iv_profil"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_profil"
        android:layout_below="@id/tv_nama"
        android:text="bshriyuni"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_profil"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_poto"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="caption"
            android:textSize="20dp"
            android:padding="10dp"/>
    </LinearLayout>


</RelativeLayout>